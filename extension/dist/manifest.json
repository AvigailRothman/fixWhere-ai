{
  "manifest_version": 3,
  "name": "Debug Catcher (Local)",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:4000/*"],
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*"],
      "js": ["hook.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*"],
      "js": ["bridge.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    }
  ],
  "devtools_page": "devtools.html"
}
